# Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=YourBotUsername
ENVIRONMENT=development  # development, staging, production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/astrotarot
DB_HOST=localhost
DB_PORT=5432
DB_USER=astrotarot_user
DB_PASSWORD=your_secure_password
DB_NAME=astrotarot_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# External APIs
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Payment Providers
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
TELEGRAM_PAYMENTS_TOKEN=your_telegram_payment_token
CRYPTO_BOT_TOKEN=your_crypto_bot_token

# Webhook Configuration (optional)
USE_WEBHOOK=false
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SECRET=your_webhook_secret
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8080

# Admin Configuration
ADMIN_IDS=123456789,987654321  # Comma-separated admin Telegram IDs
DEVELOPER_ID=123456789

# Features Toggle
ENABLE_ANALYTICS=true
ENABLE_BACKUPS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_DEBUG_MODE=false

# Limits and Timeouts
MAX_DAILY_TAROT_FREE=3
MAX_DAILY_HOROSCOPE_FREE=1
SESSION_TIMEOUT_MINUTES=30
RATE_LIMIT_MESSAGES_PER_MINUTE=20

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE_PATH=logs/bot.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Timezone
DEFAULT_TIMEZONE=Europe/Moscow

# File Storage
UPLOAD_PATH=uploads/
MAX_FILE_SIZE_MB=10

# Cache Settings
CACHE_TTL_SECONDS=3600
CACHE_PREFIX=astrotarot:

# API Keys for Additional Services
WEATHER_API_KEY=your_weather_api_key  # For astrological weather
GEONAMES_USERNAME=your_geonames_username  # For location services

# Notification Settings
DAILY_HOROSCOPE_TIME=09:00
SUBSCRIPTION_REMINDER_DAYS=3

# Backup Settings
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# Email Configuration (for reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@yourdomain.com

# Feature Flags
FEATURE_AI_INTERPRETATIONS=true
FEATURE_VOICE_MESSAGES=false
FEATURE_GROUP_READINGS=false
FEATURE_PREMIUM_TRIALS=true

# Security
SECRET_KEY=your-very-secret-key-for-encryption
JWT_SECRET=your-jwt-secret-for-tokens
ENCRYPTION_KEY=your-32-byte-encryption-key

# Development
DEBUG=false
TESTING=false
MOCK_PAYMENTS=false
MOCK_EXTERNAL_APIS=false